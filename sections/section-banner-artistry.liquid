    {
      "type": "text",
      "id": "eyebrow",
      "label": "t:sections.banner-artistry.settings.eyebrow.label"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.banner-artistry.settings.heading.label",
      "default": "Artistry Banner"
    },
    {
      "type": "text",
