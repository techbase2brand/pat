  "settings": [
    {
      "type": "text",
      "id": "id",
      "label": "t:sections.banner-artistry.settings.id.label",
      "info": "t:sections.banner-artistry.settings.id.info"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "t:sections.banner-artistry.settings.background-image.label"
