      "type": "image_picker",
      "id": "image_3",
      "label": "t:sections.banner-artistry.settings.image-3.label"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "t:sections.banner-artistry.settings.image-4.label"
    },
    {
      "type": "image_picker",
      "id": "image_5",
      "label": "t:sections.banner-artistry.settings.image-5.label"
    },
    {
      "type": "image_picker",
      "id": "image_6",
      "label": "t:sections.banner-artistry.settings.image-6.label"
    },
    {
      "type": "image_picker",
      "id": "image_7",
      "label": "t:sections.banner-artistry.settings.image-7.label"
    },
    {
      "type": "image_picker",
      "id": "image_8",
      "label": "t:sections.banner-artistry.settings.image-8.label"
    },
    {
      "type": "image_picker",
      "id": "image_9",
      "label": "t:sections.banner-artistry.settings.image-9.label",
      "info": "t:sections.banner-artistry.settings.image-9.info"
    }
  ],
  "presets": [
    {
      "name": "t:sections.banner-artistry.name"
    }
  ]
}
{% endschema %}
