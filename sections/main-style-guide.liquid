  <div class="container">
    <div class="box">
      <h2>Buttons</h2>
      <div class="grid style-guide-grid">

        <div>
          <h4>Button Primary Dark</h4>
          {% render 'button' mod_type: "button", mod_value: "Shop now" %}

          <h4>Themed Buttons</h4>
          {% render 'button' mod_type: "button", mod_value: "No Theme Button" %}

          {% render 'button' mod_type: "button", mod_value: "Light Theme Button", mod_theme: 'light' %}

          {% render 'button' mod_type: "button", mod_value: "Dark Theme Button", mod_theme: 'dark' %}

          {% render 'button' mod_type: "submit", mod_class: "js-open-slideout", mod_value: "Example with data attributes", mod_theme: 'dark', mod_attr: "data-slide-target='email-signup'" %}
        </div>

        <div>
          <h4>Button Primary Dark (disabled)</h4>
          {% render 'button' mod_type: "button", mod_value: "Shop now", mod_disabled: true %}
        </div>

        <div>
          <h4>Button Secondary</h4>
          {% render 'button' mod_type: "button", mod_variant: "secondary", mod_value: "Shop now" %}
        </div>

        <div>
          <h4>Button Secondary (disabled)</h4>
          {% render 'button' mod_type: "button", mod_variant: "secondary", mod_value: "Shop now", mod_disabled: true %}
        </div>

        <div>
          <h4>Button text underline</h4>
          {% render 'button' mod_type: "link", mod_href: "#", mod_variant: "text-underline basic", mod_value: "Shop now" %}
        </div>

        <div>

          <h4>Themed Button text underline</h4>
          {% render 'button' mod_type: "link", mod_href: "#", mod_variant: "text-underline", mod_value: "Dark Theme Underline Button", mod_theme: 'dark' %}

          {% render 'button' mod_type: "link", mod_href: "#", mod_variant: "text-underline", mod_value: "Light Theme Underline Button", mod_theme: 'light' %}
        </div>

        <div>
          <h4>Button text underline (disabled)</h4>
          {% render 'button' mod_type: "link", mod_href: "#", mod_variant: "text-underline", mod_value: "Shop now", mod_disabled: true %}
        </div>

        <div>
          <h4>Button With Icon</h4>
          {% render 'button' mod_variant: "text-icon", mod_value: "Shop now", mod_icon: "arrow" %}
        </div>

        <div>
          <h4>Button With Icon (disabled)</h4>
          {% render 'button' mod_variant: "text-icon", mod_value: "Button with icon (disabled)", mod_icon: "arrow", mod_disabled: true %}
        </div>

        <div>
          <h4>Button Text Underline with icon</h4>
          {% render 'button' mod_variant: "text-icon text-underline", mod_value: "Button with icon & Underline", mod_icon: "arrow" %}
        </div>

        <div>
          <h4>Button Text Underline with icon (disabled)</h4>
          {% render 'button' mod_value: "Button with icon & Underline", mod_icon: "arrow", mod_disabled: true, mod_variant: "text-icon text-underline" %}
        </div>

      </div>
    </div>
  </div>
  <div class="container">
    <div class="box">

      <h2>Forms</h2>

      <!-- Default Forms-->
      <h3>Default form fields</h3>
      <div class="grid style-guide-grid">
        <div>
          {%- render 'form-input', type: 'text' -%}
        </div>
        <div>
          <div class="input-container label-stuck-on-top with-label js-input-container">
            <label class="active">Label <span>*</span></label>
            <input type="text" placeholder="With placeholder text" />
          </div>
        </div>
        <div>
          <div class="input-container label-stuck-on-top disabled with-label js-input-container">
            <label class="active">Label <span>*</span></label>
            <input type="text" disabled placeholder="Disabled" />
          </div>
        </div>
        <div>
          <div class="input-container label-stuck-on-top error with-label js-input-container">
            <label class="active">Placeholder Text <span>*</span></label>
            <input type="text" placeholder="With error" />
          </div>
        </div>
      </div>

      <!-- Form field with icons -->
      <h3>Form field with icons</h3>
      <div class="grid style-guide-grid">
        <div>
          {%- render 'form-input-with-icon', type: 'text' -%}
        </div>
        <div>
          {%- render 'form-input-with-icon', type: 'text', background: true -%}
        </div>
      </div>

      <!-- Dropdown -->
      <h3>Dropdown</h3>
      <div class="grid mb-40 style-guide-grid--half">
        <div>
          {%- render 'form-dropdown' -%}
        </div>
      </div>


      <!-- Radio -->
      <h3>Radio buttons</h3>
      <div class="grid style-guide-grid">
        <div>
          {%- render 'form-radio-checkbox', type: 'radio', label: 'Unchecked' -%}
        </div>
        <div>
          <div class="radio-container">
            <label>
              <input type="radio" checked="checked" />
              <span class="checkmark"></span>
              <span class="text">Checked</span>
            </label>
          </div>
        </div>
        <div>
          <div class="radio-container disabled">
            <label>
              <input type="radio" disabled="disabled" />
              <span class="checkmark"></span>
              <span class="text">Disabled</span>
            </label>
          </div>
        </div>
      </div>


      <!-- Checkboxes -->
      <h3>Checkboxes</h3>
      <div class="grid style-guide-grid">
        <div>
          {%- render 'form-radio-checkbox', type: 'checkbox', label: 'Unchecked' -%}
        </div>
        <div>
          <div class="checkbox-container">
            <label>
              <input type="checkbox" checked="checked">
              <span class="checkmark"></span>
              <span class="text">Checked</span>
            </label>
          </div>
        </div>
        <div>
          <div class="checkbox-container disabled">
            <label>
              <input type="checkbox" disabled="disabled">
              <span class="checkmark"></span>
              <span class="text">Disabled</span>
            </label>
          </div>
        </div>
      </div>
      <div class="grid style-guide-grid">
        <div>
          <h4>Quantity selector</h4>
          {%- render 'form-quantity-selector' -%}
        </div>
        <div>
          <h4>Quantity selector - disabled</h4>
          <div class="qty-select-container disabled">
            <div class="qty-select-inner">
              <button>{% render 'icon-minus' %}</button>
              <input type="text" value="1" disabled="disabled">
              <button>{% render 'icon-plus' %}</button>
            </div>
          </div>
        </div>
        <div>
          <h4>Shade selector</h4>
          <div class="grid shade-selector-grid">
            <div>
              {%- render 'form-shade-selector', color: '#d9a972', disabled: false, tooltip: "2W1 Natural" -%}
            </div>
            <div>
              {%- render 'form-shade-selector', color: '#d9a972', disabled: true, tooltip: "2W1 Natural" -%}
            </div>
            <div>
              {%- render 'form-shade-selector', color: '#d9a972', disabled: false, tooltip: '2W1 Natural' -%}
            </div>
            <div>
              <div class="color-select-container selected">
                <div class="color-select-inner">
                  <button></button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div>
          <h4>Size selector</h4>
          {% render 'form-size-selector' %}
        </div>
      </div>
      <div class="grid mb-40 style-guide-grid">
        <div>
          <h4 style="margin-bottom: 0;">Carousel Arrows</h4>
          <p style="color: var(--color-red);"><small>Needs to be moved into component</small></p>
          {%- render 'carousel-arrows' -%}
        </div>
        <div>
          <h4>Selling Fast Badge</h4>
          {%- render 'selling-fast' -%}
        </div>
      </div>
    </div>
  </div>
</section>

