          <div class="swatch background-color-off-white"></div>
          <div class="title">
            <h4>Off-White</h4>
          </div>
        </div>

        <div>
          <div class="swatch border-pewter-gradient-outline"></div>
          <div class="title">
            <h4>Pewter Gradient Outline</h4>
          </div>
        </div>

        <div>
          <div class="swatch background-color-gradient-pewter"></div>
          <div class="title">
            <h4>Pewter Gradient Fill</h4>
          </div>
        </div>
      </div>
      <div class="grid style-guide-grid">
        <div>
          <div class="swatch background-color-tan "></div>
          <div class="title">
            <h4>Tan</h4>
          </div>
        </div>

        <div>
          <div class="swatch background-color-light-tan"></div>
          <div class="title">
            <h4>Light Tan</h4>
          </div>
        </div>

        <div>
          <div class="swatch background-color-pink"></div>
          <div class="title">
            <h4>Pink</h4>
          </div>
        </div>

        <div>
          <div class="swatch background-color-pale-pink"></div>
          <div class="title">
            <h4>Pale Pink</h4>
          </div>
        </div>

        <div>
          <div class="swatch background-color-error-red"></div>
          <div class="title">
            <h4>Error Red</h4>
          </div>
        </div>
      </div>
    </div>
  </div>
